

<script src="~/Content/application_js/login.js"></script>
<h4 class="setgreen">@ViewBag.Message</h4>
<div class="container">
    <div class="row align-center">
        <div class="form_bg">
            <form class="loginform" method="post" action="http://localhost/MVC/Timesheet/LogIn">
                <h2 class="text-left setgreen">Login Page</h2>
                <br />
                <div class="form-group">
                    <input type="email" name="Email" class="form-control" id="userid" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <input type="password" name="Password" class="form-control" id="pwd" placeholder="Password" required>

                </div>
                <br />
                <div class="align-center">
                    <button type="submit" class="btn btn-default setgreen" id="login">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>
