@model MVC.Objects.User

@{
        var objUser = Session["UserObject"] as MVC.Objects.User;
  }
<link rel="stylesheet" href="https://code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css" />
<script src="http://code.jquery.com/ui/1.11.1/jquery-ui.min.js"></script>

@*<script src="~/Scripts/jquery.validate.js"></script>*@
<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.js"></script>

<script src="~/Content/application_js/timesheet.js"></script>
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet"/>

<h5 class="top-header col-xs-12">Welcome @objUser.FirstName</h5>

 <div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="table-responsive">
                <button type="button" id="btnnewtimesheet" class="btn btn-primary">New Timesheet</button>
            <div class="space-timesheet">
            </div>
                <table class="table">
                    <tr>
                        <th>Sr. No</th>
                        <th>Project</th>
                        <th>Description</th>
                        <th>Hour</th>
                        <th>Action</th>
                    </tr>
                    <tbody id="tbtimesheet" class="table-striped"></tbody>
                </table>
                <input type="hidden" id="userId" value="@objUser.Id" />
                <div id="divnewtimesheet" class="modal-dialog">
                    <input type="hidden" id="timesheetid" />
                    Project Name : <input type="text" name="ProjectName" id="projectname" class="form-group"  required /><br /><br />
                    Description : <input type="text" name="Description" id="description" class="form-group" required /> <br /><br />
                    Hour : <input type="number" name="Hour" id="hour" /><br /><br />
                    <button type="button" id="save" class="btn btn-success">Save</button><br /><br />
                </div>
                <div id="dialog" title="Confirmation Required">
                    Are you sure you want to delete this?
                </div>

            </div><!--end of .table-responsive-->
        </div>
    </div>
</div>
